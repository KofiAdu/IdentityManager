@using Microsoft.AspNetCore.Identity

@inject UserManager<IdentityUser> userManager
@inject SignInManager<IdentityUser> signInManger

<ul class="navbar-nav">

    @if (signInManger.IsSignedIn(User))
    {
        <li class="nav-link">
            <a class="nav-link" href="#">Hello, @userManager.GetUserName(User)</a>
        </li>
        <li class="nav-link">
            <form id="logoutform" method="post" class="form-inline" asp-controller="Account" asp-action="Logout">
                <button type="submit" class="btn nav-link">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
          <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
        </li>
    }
   
</ul>
