@model Microsoft.AspNetCore.Identity.IdentityRole
@{
    var title = "Add new Role";
}

<form method="post">
    @*Update*@
    @if(Model != null && !String.IsNullOrEmpty(Model.Id)){

        //change title from add to edit
        title = "Edit Role";
        <input asp-for="@Model.Id" hidden/>//needed later for posting data
    }

    <div class="border p-3 bg-white">
        <div class="form-group row">
            <h2 class="text-info pl-3">@title</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="Id"/>
                    </div>
                    <div class="col-8">
                        <input asp-for="Id" readonly class="form-control"/>
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="Name" />
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-8 offset-4 row">
                       <div class="col">
                            @if (Model != null && !String.IsNullOrEmpty(Model.Id))
                            {
                                //update roles if id is provided
                                <input type="submit" class="btn btn-info w-100" value="Update"/>
                            }
                            else
                            {
                                //create new role
                                <input type="submit" class="btn btn-primary w-100" value="Create" />
                            }
                       </div>
                       <div class="col">
                           <a asp-action="Index" class="btn btn-success w-100">Back</a>
                       </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
